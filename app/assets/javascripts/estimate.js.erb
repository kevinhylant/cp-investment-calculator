$(window).scroll(function(){
  var top = $(this).scrollTop();
  var height = $(window).height();
  if(top < (80)){
    $(".header-title").fadeOut(500);
  }
  else if(top < height-130) {
    $(".header-title").fadeIn(500);
  }
});


$( document ).ready(function() {

  $('.activity-other').change(function(){
    $('#activity-input-other').fadeToggle();
  });

  $('#employee_name').change(function(){
    if ($('#employee_name')[0].value.toLowerCase() == 'classpass'){

      $('#admin').fadeIn();
    }
  }); 

  if ($('#employee_name')[0].value.toLowerCase() == 'classpass'){
      $('#admin').show();
    }

  <% fixed_cost_types = MyGenerator.fixed_costs.keys %>
  <% fixed_cost_types.each do |fc_type| %>

  $('.other_<%= fc_type %>').on('change', function(){
    var sel_box = $('.other_<%= fc_type %>')[0];
    var hidden_input = $('#other_<%= fc_type %>');
    if ($(sel_box.options[sel_box.selectedIndex]).text() == 'Other'){
      hidden_input.fadeToggle();
    }
  });

  <% end %>
 

  var num_fields =  $('.number');
  for (var i in num_fields){
    if ( i < num_fields.length) {
      $(num_fields[i]).on('keyup', function(i){
        field_value = $(this).val();
        $(this).val(accounting.formatMoney(field_value, "$", 0));
      });
    }
  }

}); 

